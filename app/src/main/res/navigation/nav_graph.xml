<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/chartersListScreen">

    <fragment
        android:id="@+id/chartersListScreen"
        android:name="ru.skillbranch.gameofthrones.ui.charters_list_screen.ChartersListScreen"
        android:label=" " >
        <action
            android:id="@+id/action_chartersListScreen_to_characterScreen"
            app:destination="@id/characterScreen" />
    </fragment>
    <fragment
        android:id="@+id/characterScreen"
        android:name="ru.skillbranch.gameofthrones.ui.character_screen.CharacterScreen"
        android:label=" " >
        <argument
            android:name="relativeCharacter"
            app:argType="ru.skillbranch.gameofthrones.data.local.entities.RelativeCharacter" />
        <action
            android:id="@+id/action_characterScreen_self"
            app:destination="@id/characterScreen" />
    </fragment>
</navigation>